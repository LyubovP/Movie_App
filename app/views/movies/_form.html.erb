<form>  
  <%= form_with(model: movie) do |form| %>
    <% if movie.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(movie.errors.count, "error") %> prohibited this movie from being saved:</h2>

        <ul>
          <% movie.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  <fieldset>
      <div class="form-group">
        <%= form.label :title, style: "display: block", class: "col-form-label col-form-label-lg mt-4" %>
        <%= form.text_field :title, class: "form-control form-control-lg" %>
      </div>

      <div class="form-group">
        <%= form.label :description, style: "display: block", class: "col-form-label col-form-label-lg mt-4" %>
        <%= form.text_area :description, class: "form-control form-control-lg" %>
      </div>

      <div class="form-group">
        <%= form.label :category, style: "display: block", class: "col-form-label col-form-label-lg mt-4" %>
          <%= form.select :category, Movie::categories.keys %>
      </div>

      <div class="form-group">
        <%= form.label :rating, style: "display: block", class: "col-form-label col-form-label-lg mt-4" %>
        <%= form.text_field :rating %>
      </div>

      <div class="form-group">
        <%= form.label :image, style: "display: block", class: "col-form-label col-form-label-lg mt-4" %>
        <%= form.file_field :image, class: "form-control" %>
      </div>
  </fieldset>
  <br/>
    <div>
      <%= form.submit class: 'btn btn-primary' %>
    </div>
  <% end %>  
</form>